   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
   <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.js"
      integrity="sha512-E378bwaeZf1nwXeJGIwTB58A5gPt5jFU3u6aTGja4ZdRFJeo/N/REKnBgNZOZlH6JdnOPO98vg2AnSGaNfCMFQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   <link rel="stylesheet" href="/css/homePage.css">
   <link rel="stylesheet" href="/css/styles-home.css">
   <style>
      @import url("https://fonts.googleapis.com/css2?family=Inconsolata&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
      body {
         font-family: "Montserrat", sans-serif;
         background-color: #f0f0f0;
         padding-top:0px;
         padding-bottom: 0px;
      }

      .admin-user {
         display: flex;
         justify-content: center;

         /* margin-bottom: 2rem; */
         box-shadow: -3px 5px 15px rgba(0, 0, 0, 0.57);
         border-radius: 0.5rem;
         min-height: 4rem;


      }

      .admin-user a {
         /* margin-left: px; */
         min-width:fit-content;


      }

      .container-ok {
         display: flex;
         flex-direction: column;
         align-items: center;
         justify-content: center;
         height: 100vh; 
         

         /* align-ite90ms: center; */
         /* height: 100vh; */

      }

      .card-ok {
         display: flex;
         flex-direction: row;
         background-color: #fff;
         border-radius: 10px;
         box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
         overflow: hidden;
         width: 800px;
         min-width: 120%;
         height: 700px;

      }

      .card-ok img {
         max-width: 65%;
           
         margin: 0;
      }

      .card-ok form {
         display: flex;
         flex-direction: column;
         padding: 50px;
         width: 50%;
      }

      .card-ok h2 {
         margin-top: 0;
         font-weight: bold;
         font-size: 32px;
         color: #333;
         text-align: center;
      }

      .card-ok label {
         font-weight: 500;
         font-size: 16px;
         color: #333;
         margin-bottom: 10px;
      }

      .card-ok input[type="email"],
      .card-ok input[type="text"],
      .card-ok input[type="password"] {
         padding: 10px;
         border: none;
         border-radius: 5px;
         background-color: #f0f0f0;
         font-size: 16px;
         margin-bottom: 20px;
         color: #333;
         margin-top: 1rem;
      }

      .card-ok input[type="submit"] {
         padding: 10px;
         border: none;
         border-radius: 5px;
         background-color: #007bff;
         color: #fff;
         font-size: 16px;
         cursor: pointer;
         transition: background-color 0.3s ease;


      }

      .card-ok input[type="submit"]:hover {
         background-color: #0056b3;
      }

      @media (max-width: 768px) {
         .card-ok {
            flex-direction: column;
         }

         .card-ok img {
            max-width: 100%;
            height: auto;
         }

         .card-ok form {
            width: 100%;
         }

      }
   </style>
   </head>

   <body>
      <div class="container-ok">
         <h1 >Signup</h1>
         <div class="card-ok">
            <img src="css/images/signup.jpg" alt="login image">

            <form action="/<% if (restaurantPage) { %>auth-restaurant-signup<% } else { %>auth-signup<% } %>" method="post" autocomplete="off">
               <!-- <form  action="/auth-login" method="post"> -->
               <% if (restaurantPage) { %>
                  <div class="container-fluid justify-content-start admin-user">
                     <a href="/auth-restaurant-login" class="btn " style="background: rgb(0,0,0);
                     background: linear-gradient(90deg, rgba(0,0,0,1) 5%, rgba(40,44,53,1) 77%); color: white;"role="button"
                        data-bs-toggle="button">Restaurant Owner Login</a>
                  </div>
               <% } else { %>
                <div class="container-fluid justify-content-start admin-user">
                  <a href="/auth-login" class="btn " style="background: rgb(255,172,28);
                  background: linear-gradient(90deg, rgba(255,172,28,1) 2%, rgba(242,140,40,1) 89%);" role="button"
                     data-bs-toggle="button">User Login</a>
               </div>

               <div class="form-floating mb-3">
                  <input required="true" type="text" class="form-control childLoginStyle" name="userName" id="userName" placeholder="userName">
                  <label for="userName">User Name</label>
               </div>
                  <% } %>

               <div class="form-floating mb-3">
                  <input required="true" type="email" class="form-control childLoginStyle" name="email" id="email" placeholder="email">
                  <label for="email">Email</label>
               </div>

               <div class="form-floating mb-3">
                  <input required="true" type="password" class="form-control childLoginStyle" name="password" id="password"
                     placeholder="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}$">
                  <label for="password">Password</label>
               </div>
               <div class="form-floating mb-3">
                  <input required="true" type="password" class="form-control childLoginStyle" name="confirmPassword" id="confirmPassword"
                     placeholder="confirmPassword" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,16}$">
                  <label for="confirmPassword">Confirm Password</label>
               </div>

               <button class="btn btn-outline-success" type="submit">Signup</button>

            </form>
         </div>
      </div>
      <!-- form container for login as well as signup form -->



