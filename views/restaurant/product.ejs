<body>

  <%- include('../includes/navigation') %>     
   

        <% if( products.length> 0) { %>
          <div class="ok-image">
          <div class="ok-container">

            <% for(let product of products ) { %>
              <div class="ok-product">
                <img src="<%= product.imageUrl %>" alt="products" >
                <figcaption>
                  <%= product.restaurantName %>
                </figcaption>
                <figcaption>No of Emoployees - <%= product.employees %>
                </figcaption>
                
                <p>
                  <%= product.location %>
                </p>
                <div class="edit-delete">
                  <a href="/restaurant/edit-product/<%= product.id %>" class="btn btn-outline-warning edit-delete-btns edit-btn">edit</a>
                  <form  action="/restaurant/delete-product" method="post">
                    <input type="hidden" value="<%= product.id %>" name="restaurantId">
                     <button class="btn btn-outline-warning edit-delete-btns delete-btn">Delete</button>
                  </form>
                  
                </div>

              </div>
              <% } %>
          </div>
        </div>
          <% } else { %>

            
            <div class="p-5 mb-4 bg-light rounded-3">
              <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">No Restaurants To Show ! ðŸ¥²</h1>
                <p class="col-md-8 fs-4">Please press the below button to try again or be redirected to the Add Restaurant Page</p>
                <a href="/restaurant/add-product"   class="btn btn-outline-warning btn-lg re-add-product-btn">Add Restaurant</a>
              </div>
            </div>
          
            <% } %>




          
   









