<%- include('../includes/start.ejs') %>
<link rel="stylesheet" href="/css/adminProducts.css">
  <link rel="stylesheet" href="/css/productPage.css">
     <style>
        .userName{
      margin-right: 1rem !important;
    }
    .userIcon
    {
      margin-right: 1rem !important;
      margin-top: 0.5rem;
    }
    .orders {
  list-style: none;
  padding: 0;
  margin: 0;
}

.orders__item h1 {
    margin: 0;
    font-size: 1rem;
}

.orders__item {
    box-shadow: -3px 5px 15px rgba(0, 0, 0, 0.47);
    width: 50rem;
    margin-left: 28rem;
  padding: 1rem;
  margin-bottom: 1rem;
  border-radius: 0.5rem;
}

.orders__products {
    list-style: none;
    margin: 0;
    padding: 0;
}

.orders__products-item {
    margin: 0.5rem 0;
    padding: 0.5rem;
    border: 1px solid ;
    background: rgb(255,172,28);
      background: linear-gradient(90deg, rgba(255,172,28,1) 2%, rgba(242,140,40,1) 89%);
    color: white;
}
     </style>
    </head>
     
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <%- include('../err404') %>
            <% } else { %>
                <!-- <p style="text-align: center; margin-top:6rem;">Thanks For Ordering !</p> -->
                <h1 style="text-align: center; margin-top:6rem;">Your Orders</h1>
                <ul class="orders" style="margin-top:3rem;">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1># <%= order.id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(product => { %>
                                    <li class="orders__products-item"><%= product.title %> (<%= product.orderItem.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>